<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_popup_false_answer">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="387dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_popup"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/lyaout_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="132dp"
                    android:layout_marginStart="130dp"
                    android:src="@raw/false_answer" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/baloo2_extrabold"
                    android:gravity="center"
                    android:text="Câu trả lời chưa chính xác"
                    android:textAlignment="center"
                    android:textSize="23sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo2_extrabold"
                    android:text="Hẹn gặp lại bạn vào ngày mai nhé"
                    android:textAlignment="center"
                    android:textSize="23sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
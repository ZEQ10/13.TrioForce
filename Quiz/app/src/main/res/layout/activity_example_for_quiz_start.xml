<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:id="@+id/main"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#E0F7FA">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Văn học"
                android:textSize="20sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#B2EBF2"
                android:text="Dễ"
                android:textSize="14sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Question Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background=""
                android:text="1"
                android:textColor="#FFF" />

            <!-- Repeat similar Button tags for questions 2-10 -->
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background=""
                android:text="2"
                android:textColor="#FFF"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Image Placeholder -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src=""
            android:scaleType="centerInside" />

        <!-- Question Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Câu hỏi ở đây?"
            android:textSize="18sp"
            android:gravity="center" />

        <!-- Answer Options -->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/rbOptionA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Đáp án"
                android:buttonTint="#00C853"
                android:background=""
                android:textColor="#000" />

            <RadioButton
                android:id="@+id/rbOptionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B: Đáp án"
                android:buttonTint="#D50000"
                android:background=""
                android:textColor="#000"
                android:layout_marginTop="4dp" />

            <RadioButton
                android:id="@+id/rbOptionC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C: Đáp án"
                android:buttonTint="#FFAB00"
                android:background=""
                android:textColor="#000"
                android:layout_marginTop="4dp" />

            <RadioButton
                android:id="@+id/rbOptionD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D: Đáp án"
                android:buttonTint="#1E88E5"
                android:background=""
                android:textColor="#000"
                android:layout_marginTop="4dp" />
        </RadioGroup>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lùi lại"
                android:backgroundTint="#0288D1"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiếp tục"
                android:backgroundTint="#FFCA28"
                android:textColor="#FFF"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </LinearLayout>
